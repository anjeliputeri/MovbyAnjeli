<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.mov">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission-sdk-23 android:name="android.permission.INTERNET"/>
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission-sdk-23 android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mov"
        tools:targetApi="31">
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:exported="false" />
        <activity android:name=".home.HomeActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".onboarding.OnboardingOneActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.OnboardingTwoActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.OnboardingThreeActivity"
            android:exported="false" />
        <activity
            android:name=".signs.signin.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".signs.signup.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".signs.signup.SignUpPhotoscreenActivity"
            android:exported="true" />
    </application>

</manifest>