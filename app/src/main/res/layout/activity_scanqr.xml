<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="360dp"
    android:background="@drawable/shape_rectangle_white"
    tools:context=".tiket.TiketActivity">

        <ImageView
            android:id="@+id/iBarcode"
            android:layout_width="400dp"
            android:layout_height="240dp"
            android:src="@drawable/barcode2_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/Tscan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silahkan melakukan scanning\npada counter tiket terdekat"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iBarcode"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bBacktiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle_blue_grey"
            android:text="tutup"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Tscan"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>

        


    </androidx.constraintlayout.widget.ConstraintLayout>
